<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@drawable/row_item"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.7">

        <TextView
            android:id="@+id/expenType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textSize="15sp"
            android:text="Phone/PhotoCopt bill" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/row_item"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_weight="1">

        <TextView
            android:id="@+id/expenAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:gravity="center"
            android:textSize="15sp"
            android:text="100.34" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/row_item"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1.2">

        <TextView
            android:id="@+id/expenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textSize="13sp"
            android:text="11:30 AM" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/row_item"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/expenVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textSize="13sp"
            android:text="Rahim Mia House" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/row_item"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="2">

        <TextView
            android:id="@+id/showSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/editExpen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            style="?android:attr/borderlessButtonStyle" />

        <ImageView
            android:id="@+id/removeExpen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/remove"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>


</LinearLayout>